<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.enrique.nicaherolayout.ajustes_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TamaÃ±o de letra"
                android:textColor="@color/colorBlack"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="40dp" />



            <TextView
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volumen"
                android:textColor="@color/colorBlack"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Velocidad de canciones"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="0"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />


            <Space
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="40dp"
                android:layout_height="45dp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <ImageButton
        android:id="@+id/iniciar_sesion_google"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/inicia_google"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageButton
        android:id="@+id/iniciar_sesion_facebook"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/inicia_facebook"/>
</LinearLayout>
